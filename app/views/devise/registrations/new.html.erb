
  <div class="abc bg container col-sm-6 text-black p-3 mt-4">
    <h1 class="text-center"><b>Sign up</b></h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :User_Name %><br />
        <%= f.text_field :username,class:'container w-100 bg-light rounded text-muted small p-2', autofocus: true, autocomplete: "username", placeholder: "Enter your Name" %>
      </div>

      <div class="field my-4">
        <%= f.label :email %><br />
        <%= f.email_field :email,class:'container w-100 bg-light rounded text-muted small p-2', autofocus: true, autocomplete: "email", placeholder: "Enter Email" %>
      </div>

      <div class="field my-4">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, class:'container w-100 bg-light rounded text-muted small p-2', autocomplete: "new-password" , placeholder: "Enter password"%>
      </div>

      <div class="field my-4">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation,class:'container w-100 bg-light rounded text-muted small p-2', autocomplete: "new-password", placeholder: "Confirm your password"%>
      </div>
      <div class="container">
        <div class="row">
          <div class="offset-sm-4">
            <%= link_to "Back", root_path, class:"btn btn-primary btn-outline-white btn-lg text-white mt-3 px-4"%>
          </div>
          <div class="actions col-sm-5">
            <%= f.submit "Sign up", class:"btn btn-primary btn-outline-white btn-lg text-white mt-3"%>
          </div>
        </div>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>

