
  <div class="abc container col-sm-7 text-dark p-3 rounded mt-5">
    <h1 class="text-center"><b>Log in</b></h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:'container w-100 bg-light rounded text-muted small p-2', placeholder:'Enter your Email'%>
      </div>

      <div class="field my-4">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password",class:'container w-100 bg-light rounded text-muted small p-2', placeholder:'Enter your Password' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field my-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="container">
        <div class="row">
          <div class="offset-sm-4 pl-4">
            <%= link_to "Back", root_path, class:"btn btn-primary btn-outline-white btn-lg text-white mt-3 px-4"%>
          </div>
          <div class="actions col-sm-5">
            <%= f.submit "Log in",class:"btn btn-primary btn-outline-white btn-lg text-white mt-3" %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="text-center">
    <p class="text-danger">Do not have an account?
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Sign up", new_registration_path(resource_name),class:'text-primary' %><br />
      <% end %>
    </p>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name),class:'text-primary font-weight-bold' %><br />
    <% end %>
  </div>